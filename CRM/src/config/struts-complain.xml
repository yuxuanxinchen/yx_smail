<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="complain" extends="struts-default" namespace="/cpl">


		<action name="complain" class="complainAction">
			<result>/WEB-INF/form/addCustomerComplain.jsp</result>
		</action>

		<action name="sComplain" method="showComplain" class="complainAction">
			<result>/WEB-INF/form/ShowComplainInfo.jsp</result>
		</action>

		<action name="uComplain" method="updataComplain" class="complainAction">
			<result>/WEB-INF/form/UpdataCustomerComplain.jsp</result>
		</action>

	</package>

</struts>    
