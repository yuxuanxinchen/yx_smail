<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="users" extends="struts-default" namespace="/user">


		<action name="user" class="userAction">
			<result>/WEB-INF/form/ShowUser.jsp</result>
		</action>

		<action name="code" method="code"
			class="com.yuxuan.action.code.CodeController">
			<result name="success" type="stream">
				<param name="contentType">image/jpeg</param>
				<param name="inputName">imageOutputStream</param>
				<param name="bufferSize">2048</param>
			</result>
		</action>

		<action name="login" class="loginAction">
			<result name="SUCCESS" type="redirect">/index.jsp</result>
			<result name="FAIL" type="redirect">/login.jsp</result>
		</action>





	</package>
</struts>    
